
/*--start-news--*/
.media {
  padding-top: 5em;
}
.news-top{
  text-align:center;
}
.news-top p {
  color: #000000;
  font-size: 16px;
  font-weight: 400;
  margin-top: 8px;
}
.news-left img{
  width:100%;
}

.news-left video{
  height 225px;
}
.news-bottom{
  margin-top:3em;
}
.news-main {
  position: relative;
  text-align center
  font-size 20px
}
.news-main h4 {
  font-size: 1.35em;
  color: #595959;
  font-weight: 700;
  margin: 0px;
}
.news-main ul {
  padding: 10px 0;
  border-bottom: 1px solid rgba(103, 103, 103, 0.16);
}
.news-main ul li:nth-child(3){
  margin-right:0;
}
.news-main ul li {
  list-style: none;
  display: inline-block;
  margin-right: 13%;
}
.news-main ul li span {
  color: #676767;
  font-size: 16px;
  font-style: italic;
  font-weight: 300;
}
.news-main p {
  color: #777777;
  font-size: 15px;
  font-weight: 400;
  line-height: 1.6em;
  text-align: left;
  margin-top: 1em;
}
.news-btn a {
  padding: 1px 11px 1px 54px;
  color: #000;
  font-size: 15px;
  font-weight: 400;
  background: url(../images/heart.png) no-repeat 0px 0px #ff7514;
}
.news-btn {
  bottom: 0;
  position: absolute;
  left: 60.7%;
}
.news-btn a:hover{
  color: #fff;
  background: url(../images/heart.png) no-repeat 0px 0px #ff7514;
  text-decoration:none;
  transition: 0.5s all;
  -webkit-transition: 0.5s all;
  -moz-transition: 0.5s all;
  -o-transition: 0.5s all;
  -ms-transition: 0.5s all;
}
.planning{
  background:url(/s/uae/g/06/res/xinruilego/v/lib/images/news-5.png) no-repeat;
  height:136px;
  display:block;
  margin-top: 8%;
  text-align: center;
}
.planning p {
  color: #ff7514;
  font-size: 2em;
  font-weight: 600;
  width: 80%;
  margin: 0 auto 0;
  line-height: 1.5em;
  padding-top: 22px;
}
/*--end-news--*/


.vedio-wrap{
  width:710px;
  margin 0 auto;
